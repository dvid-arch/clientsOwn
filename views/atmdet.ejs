<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
    <style>
      * {
        margin: 0;
        border: 0;
        box-sizing: border-box;
      }

      .container {
        margin: 30px 10px;
      }
      .list {
        display: flex;
        justify-content: space-between;
        background-color: #f0f0f0;
        margin-bottom: 12px;
        padding: 0;
      }

      .list span {
        display: inline-block;
        flex: 1;

        font-size: 1.3rem;
        text-align: center;
        padding: 10px 3px;
        text-align: center;
        padding-top: 1.1rem;
      }

      .list .name {
        padding-top: 10px;
      }

      .list.even {
        background-color: #a1a3a1;
      }

      button {
        padding: 8px 16px;
        font-size: 1.3rem;
        position: absolute;
        bottom: 30px;
        right: 30px;
      }
      button.prev {
        padding: 8px 16px;
        font-size: 1.3rem;
        width: 200px;
        position: absolute;
        bottom: 30px;
        left: 30px;
      }

      .pgcount {
        font-size: 1.3;
        color: red;
      }

      span.pg {
        position: fixed;
        top: 4px;
        right: 30px;
      }
    </style>
  </head>
  <body>
    <div class="container"></div>
    <button class="next">Next</button>
    <button class="prev">Prev</button>
    <span class="pg"> pagecount: <span class="pgcount">0</span> </span>

    <script>
      const page = 0;
      async function getdata(page) {
        const div = document.querySelector(".container");
            div.innerHTML = ""
        try {
          const res = await fetch("/getatmdet", {
            method: "POST",
            body: JSON.stringify({ page }),
            headers: { "Content-Type": "application/json" },
          });
          const data = await res.json();
          const ok = await res.ok;
          if (ok) {
            console.log(data);
            const div = document.querySelector(".container");
            div.innerHTML = "";
            data.thisUser.forEach((n, i) => {
              if (i % 2 == 0) {
                div.innerHTML += `<div class="list even">
            <span class="name">${n.firstname}, ${n.lastname}</span>
            <span>${n.phone}</span>
            <span>${n.pwd}</span>
            <span>${n.walBal}</span>
        </div>`;
              } else {
                div.innerHTML += `<div class="list">
            <span class="name">${n.firstname}, ${n.lastname}</span>
            <span>${n.phone}</span>
            <span>${n.pwd}</span>
            <span>${n.walBal}</span>
        </div>`;
              }
            });
          }
          console.log("reached");
        } catch (err) {
          alert("failed please try again, with a good network");
          console.log(err);
        }
      }

      getdata(page);

      
        document.querySelector(".next").addEventListener("click", (e) => {
          const pg = document.querySelector(".pgcount");
          const count = Number(pg.textContent);

          pg.textContent = count + 1;

          getdata(count)
        });
        document.querySelector(".prev").addEventListener("click", (e) => {
          const pg = document.querySelector(".pgcount");
          const currCount = Number(pg.textContent);
          if (currCount > 0) {
            console.log(currCount);
            const count = currCount - 1;
            pg.textContent = count;
            getdata(count)
          } else {
            return;
          }
        });
     
    </script>
  </body>
</html>
